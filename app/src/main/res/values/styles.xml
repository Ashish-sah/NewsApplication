<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Day /Light application theme. -->
    <style name="ScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">#1F1F20</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="backgroundColor">#ffffff</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransation</item>
        <!--Navigation color-->
        <item name="navigationItemColor">#1F1F20</item>
        <item name="navigationItemTintColor">#1F1F20</item>
        <!--Toolbar color-->
        <item name="toolbarColor">#17E3CF</item>
        <!--Developer Screen Color-->
        <item name="AboutDevScreenColor">#17E3CF</item>
        <!--Splash Screen color-->
        <item name="SplashScreenColor">#00B0FF</item>
    </style>

    <!-- Night /Dark application theme. -->
    <style name="darkTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#03DABA</item>
        <item name="textColor">#FFFFFF</item>
        <item name="backgroundColor">#1F1F20</item>
        <item name="cardBackgroundColor">#1F1F20</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransation</item>
        <!--Navigation color-->
        <item name="navigationItemColor">#ffffff</item>
        <item name="navigationItemTintColor">#ffffff</item>
        <!--Toolbar color-->
        <item name="toolbarColor">#17E3CF</item>
        <!--Developer Screen Color-->
        <item name="AboutDevScreenColor">#17E3CF</item>
        <!--Splash Screen color-->
        <item name="SplashScreenColor">#00B0FF</item>
    </style>

    <!--this does the styling of the buttons-->
    <style name="PrimaryFlatButton" parent="Theme.MaterialComponents.Light">
        <item name="android:buttonStyle">
            @style/Widget.AppCompat.Button.Borderless.Colored
        </item>
        <item name="colorAccent">#FF411F</item>
    </style>
    <!--Now we create window animation-->
    <style name="WindowAnimationTransation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <!--Active and inactive icon-->
    <style name="stockBottomNavigationView.InActive" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">7sp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="stockBottomNavigationView.Active" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:enabled">true</item>
    </style>
</resources>